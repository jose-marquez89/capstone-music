<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="176.0" prefWidth="225.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.UpdateProductCtrl">
   <children>
      <VBox layoutX="13.0" layoutY="12.0" prefHeight="152.0" prefWidth="200.0" spacing="10.0">
         <children>
            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="priceField" promptText="Price" />
            <TextField fx:id="quantityField" promptText="Quantity" />
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" text="Cancel" onAction="#cancel" />
                  <Button mnemonicParsing="false" text="Save" onAction="#save"/>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
