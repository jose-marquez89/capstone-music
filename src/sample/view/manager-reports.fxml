<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="618.0" prefWidth="649.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.ReportsCtrl">
   <children>
      <VBox layoutX="18.0" layoutY="21.0" prefHeight="583.0" prefWidth="613.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="14.0" prefWidth="613.0">
               <children>
                  <Label text="Company Wide Sales">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <BarChart fx:id="storeSalesChart" prefHeight="314.0" prefWidth="613.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
            <HBox alignment="CENTER_LEFT" prefHeight="14.0" prefWidth="613.0">
               <children>
                  <Label text="Orders">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="613.0" spacing="10.0">
               <children>
                  <Label text="Store:" />
                  <ComboBox fx:id="storeCb" prefWidth="150.0" />
                  <Group fx:id="btnGroup">
                     <children>
                        <RadioButton mnemonicParsing="false" text="This Week">
                            <toggleGroup>
                                <ToggleGroup fx:id="radioGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton layoutX="99.0" mnemonicParsing="false" text="This Month">
                            <toggleGroup>
                                <fx:reference source="radioGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton layoutX="202.0" mnemonicParsing="false" text="All Time">
                            <toggleGroup>
                                <fx:reference source="radioGroup" />
                            </toggleGroup>
                        </RadioButton>
                     </children>
                  </Group>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="orderTable" prefHeight="300.0" prefWidth="613.0">
              <columns>
                <TableColumn fx:id="customerCol" prefWidth="129.0" text="Customer" />
                <TableColumn fx:id="dateTimeCol" prefWidth="132.0" text="Date/Time" />
                  <TableColumn fx:id="storeCol" prefWidth="95.0" text="Store" />
                  <TableColumn fx:id="cityCol" prefWidth="107.0" text="City" />
                  <TableColumn fx:id="stateCol" prefWidth="61.0" text="State" />
                  <TableColumn fx:id="priceCal" prefWidth="88.0" text="Sale Price" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" prefHeight="7.0" prefWidth="613.0" spacing="10.0">
               <children>
                  <Label text="Total:" />
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="81.0" text="\$$$" />
                  <Button mnemonicParsing="false" text="Manager Console" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
